<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Home"></style>

    <!-- Login Page -->
    <style name="AppTheme.Login"></style>

    <style name="AppTheme.Login.InputLayout">
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/edit_default_style</item>
    </style>

    <style name="AppTheme.Login.InputLayout.Bottom">
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/layout_default_with_line_bottom</item>
    </style>

    <style name="AppTheme.Login.InputLayout.Top">
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/layout_default_with_line_top</item>
    </style>

    <style name="AppTheme.Login.ItemEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:minHeight">@dimen/abc_action_bar_default_height_material</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>