<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.AppTheme.ActionBar
        </item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="actionBarStyle">@style/Widget.AppTheme.ActionBar</item>
        <item name="homeAsUpIndicator">@mipmap/ic_nav_back</item>
        <item name="toolbarStyle">@style/Widget.AppTheme.Toolbar</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:actionBarSize" tools:ignore="NewApi">
            @dimen/abs__action_bar_default_height
        </item>
        <item name="actionBarSize">@dimen/abs__action_bar_default_height</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/primaryBlack</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/abs__action_bar_title_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- 修改actionbar的字体大小 -->
    <style name="MenuTextStyle">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="Widget.AppTheme.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="background">@drawable/action_bar_background</item>
        <item name="titleTextStyle">@style/TextAppearance.AppTheme.Widget.ActionBar.Title</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="titleTextAppearance">@style/TextAppearance.Widget.AppTheme.Toolbar.Title</item>
        <item name="android:height">@dimen/abs__action_bar_default_height</item>
        <item name="maxButtonHeight">@dimen/abs__action_bar_default_height</item>
        <item name="navigationIcon">@mipmap/ic_nav_back</item>
    </style>

    <style name="TextAppearance.AppTheme.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:textSize">@dimen/abs__action_bar_title_text_size</item>
    </style>

    <style name="TextAppearance.Widget.AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:textSize">@dimen/abs__action_bar_title_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- dialogFragment去除低版本下的顶部横线 -->
    <style name="Theme_Dialog_Fragment" parent="android:style/Theme.Dialog">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Start Page -->
    <style name="AppTheme.Ui.AppStart" parent="AppTheme.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/start_page</item>
    </style>

</resources>
